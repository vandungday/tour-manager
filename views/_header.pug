header.header 
    nav.nav.nav--tours 
        a.nav__el(href='/') All tours
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.avatar}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
            a.nav__el.nav__el--logout Log out
        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el--cta(href ='/register') Register